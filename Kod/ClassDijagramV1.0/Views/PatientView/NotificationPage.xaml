<Page x:Class="ClassDijagramV1._0.Views.PatientView.NotificationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClassDijagramV1._0.Views.PatientView"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1024"
      Title="NotificationPage"
      Background="AntiqueWhite">

    <StackPanel>
        <TextBlock Text="Obavještenja" Margin="40,20,0,20" FontSize="64"/>
        <DataGrid x:Name="tabelaPregledi" Height="300" Margin="20"  
                          AutoGenerateColumns="False"
                          ItemsSource="{Binding Notification, UpdateSourceTrigger=PropertyChanged}"
                          SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Obavještenje" Binding="{Binding Notification.Title}"  Width="*" IsReadOnly="True"/>
                <DataGridCheckBoxColumn Header="Pročitano" Binding="{Binding Notification.IsRead}" Width="100" IsReadOnly="False"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button Content="Dodaj zabilješku" Width="176" Height="42" HorizontalAlignment="Right" Margin="0, 20,100,0"/>
    </StackPanel>
</Page>
